            <td><%= store.store_name %></td>
            <td><%= store.store_location %></td>
            <td><%= store.store_expenses %></td>
            <td><%= store.region_id %></td>
            <td> <a href="/delete/<%=  store.store_id %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>

          </tr>
        <% }) %>
      </tbody>
    </table>
    <h2>Supplier</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Phone</th>
        </tr>
      </thead>
      <tbody>
        <%  suppliers.forEach( supplier => { %>
