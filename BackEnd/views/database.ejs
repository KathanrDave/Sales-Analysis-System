            <td> <a href="/delete/<%=region.region_id  %>" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a></td>

          </tr>
        <% }) %>
      </tbody>
    </table>
    <h2>Store</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Store Name</th>
          <th>Location</th>
          <th>Expenses of the store </th>
          <th>Region where the store is </th>
     
        </tr>
      </thead>
      <tbody>
        <% stores.forEach(store => { %>
